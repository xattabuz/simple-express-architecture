{
	"compilerOptions": {
		"target": "es2016",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"]
		},
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true
	}
}
